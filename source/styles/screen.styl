  background #75715e

pre .addition
  background #e6db74

.diff pre .change
  background #f92672

pre .chunk
  color #a6e22e

/* Github */

.gist table
  margin 0
  font-size 1.4rem

.gist .line-number
  min-width 25px
  font-size 1.1rem