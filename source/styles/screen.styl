  color #66d9ef

pre .keyword
.css .rule pre .keyword
pre .winutils
.javascript pre .title
.nginx pre .title
pre .subst
pre .request
pre .status
  color #F92672

pre .number
pre .hexcolor
.ruby pre .constant
  color #ae81ff

pre .value
  color #e6db74

pre .string
pre .tag pre .value
pre .phpdoc
.tex pre .formula
  color #e6db74

pre .title
pre .id
.coffeescript pre .params
.scss pre .preprocessor
  color #f92672

.javascript pre .title
.lisp pre .title
.clojure pre .title
pre .subst
  font-weight normal

pre .class pre .title
.haskell pre .type
